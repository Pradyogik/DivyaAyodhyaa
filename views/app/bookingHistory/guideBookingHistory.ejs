<!DOCTYPE html>
<html lang="en-US" dir="ltr">
<%- include('../layouts/top-header') %>

  <body>
    <div class="inner-header affix">
        <h3><a href="/"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;</a> <%= pagetitle%> <img src="/app-assets/img/services/iner-header-img.png" ></h3>

    </div>
    
    <div id="navbar-animmenu" >
      <ul class="show-dropdown main-navbar">
          <div class="hori-selector"><div class="left"></div><div class="right"></div></div>
          <li  >
              <a href="/booking"><i class="fa fa-hotel"></i>Hotels</a>
          </li>
          <li>
            <a href="/diya-booking-history"><i class="fa fa-user"></i>Diya And Prashad</a>
          </li>
          <li>
              <a href="/tour-package-booking-history"><i class="fa fa-gift"></i>Tour Packages</a>
          </li>
          <li>
              <a href="/cabs-booking-history"><i class="fa fa-car"></i>Cabs</a>
          </li>
          <li class="active">
              <a href="guide-booking-history"><i class="fa fa-user"></i>Guide</a>
          </li>
          
          
      </ul>
  </div>

      <main class="main1" style="    margin-top: 15px;
      margin-bottom: 85px;
  ">
        <section class="py-0 ">
        
          <div class="container-fluid">
               
            <% if(guidedata.length> 0)
            {
            for (let l of guidedata)
            {

            %>
           
            <div class="hotelbookinghistory ">
                <div class="row">
                 
                  <h4><b>Booking ID:</b> <%= l.order_id %>  </h4>
                  <h4><b>Booking No.:</b> <%= l.booking_number %>  </h4>
                  <h4><b>Booking Type:</b> <%= l.booking_type %></h4>
                  <h4><b>Paid Amount :</b> <%= l.booking_amount %></h4>
                  
                  <h4><b>Booking Date:</b>  <%= formatDatedmy(l.booking_date) %>  </h4>
                  <h4><b>Pickup Point:</b> <%= l.pickup_point_name %></h4>
                  <h4><b>Slot Time:</b> <%= l.slot_view %></h4>
                   
                  <h4> <%= l.name %> <b>|</b>  <%= l.mobile %></h4>
                  <h4> <%= l.email %> <b>|</b>  <%= l.address %></h4>
                  
                  <p><b>Guide Detail: </b> Guide Name and contact details will be shared before 24 hours of booking on email and mobile.</p>
                  <h4><b>Created Date :</b>  <%= formatDatedmyhis(l.created_at) %></h4>
                
              
               
              </div>
            </div>

            <% } } else { %>


           <div style="margin-top: 20%;">
            <center>
            <img src="/app-assets/img/services/favourite.png" style="height: 200px;">
            <h4>No Booking to show!</h4>
            <h5>You don't have any Booking <br>explore now and book your Guide.</h5>
            <a href="/" class="btn btn-danger"> Explore</a>
        </center>
           </div>
           <% } %>
           
            
         


        </div>
        </section>
      </main>


      <%- include('../layouts/footer') %>
  </body>


</html>

<script>
  // ---------horizontal-navbar-menu-----------
  var tabsNewAnim = $('#navbar-animmenu');
		var selectorNewAnim = $('#navbar-animmenu').find('li').length;
		var selectorNewAnim = $(".tabs").find(".selector");
		var activeItemNewAnim = tabsNewAnim.find('.active');
		var activeWidthNewAnimWidth = activeItemNewAnim.innerWidth();
		var itemPosNewAnimLeft = activeItemNewAnim.position();
		$(".hori-selector").css({
			"left":itemPosNewAnimLeft.left + "px",
			"width": activeWidthNewAnimWidth + "px"
		});
		$("#navbar-animmenu").on("click","li",function(e){
			$('#navbar-animmenu ul li').removeClass("active");
			$(this).addClass('active');
			var activeWidthNewAnimWidth = $(this).innerWidth();
			var itemPosNewAnimLeft = $(this).position();
			$(".hori-selector").css({
				"left":itemPosNewAnimLeft.left + "px",
				"width": activeWidthNewAnimWidth + "px"
			});
		});
</script>